    }
  ],

  "currencies" : [
    {"entity_name": "currency",
     "description": "Currencies",
     "admin":       true,
     "buffered":    true,
     "fields":[
        {"name": "currency_id", "heading": "Code",        "input_type": "text"},
        {"name": "description", "heading": "Description", "input_type": "text"},
        {"name": "sign",        "heading": "Sign",        "input_type": "text"}
